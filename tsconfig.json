{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2021"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./node_modules/@cuaklabs",
    "paths": {
      "@cuaklabs/duck-poker-backend-common": ["./packages/common"],
      "@cuaklabs/duck-poker-backend-env": ["./packages/env"],
      "@cuaklabs/duck-poker-backend-mongodb": ["./packages/mongodb"],
      "@cuaklabs/duck-poker-backend-redis": ["./packages/redis"],
      "@cuaklabs/duck-poker-backend-server": ["./packages/server"],
      "@cuaklabs/duck-poker-backend-test-utils": ["./packages/testUtils"]
    },
    "resolveJsonModule": true,
    "rootDir": "packages",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021"
  },
  "include": ["packages"],
  "exclude": ["node_modules/**"]
}
